        //
        let p_url = "ObtenerPersonalJson";
        //
        $.ajax({
            url: p_url
        })
        .done(function (data) {
            //
            let jsonDataStr = JSON.stringify(data);
            let jsonData    = JSON.parse(jsonDataStr);
            //
            console.log("Personal : " + jsonDataStr);
            //
            $('#PersonalTableJson').DataTable({
                  "data"   : jsonData
                , "dataSrc": ""
                , "columns": [
                    { "data": "id"         },
                    { "data": "pApellido"  },
                    { "data": "sApellido"  },
                    { "data": "cedula"     }
                ]
            });
        });
    });
 </script>
