
@model IEnumerable<Personal>;



<!-- INICIO HTML -->

<h1>PERSONAL (v2)</h1>
<br />

<button id="btnAgregarPersonal" class="btn btn-primary">Agregar Personal</button>

<br />


<!-- INICIO LISTADO JQUERY -->
<table id="PersonalTableJson" class="display" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Primer Nombre</th>
            <th>Primer Apellido</th>
            <th>Cedula</th>
            <th>...</th>
        </tr>
    </thead>
    <tfoot>
        <!--
        <tr>
            <th>ID</th>
